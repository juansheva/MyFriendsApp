<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:layout_width="0dp" android:layout_height="0dp"
            android:text="Tambah Teman"
            android:textSize="30sp"
            android:gravity="center" android:id="@+id/textView" android:layout_marginTop="56dp"
            android:layout_marginBottom="66dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editNama" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="57dp"
            android:layout_marginStart="57dp" android:layout_marginEnd="57dp" android:layout_marginRight="57dp"/>
    <Button
            android:text="Tambah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTambah"
            app:layout_constraintTop_toBottomOf="@+id/editTelp" android:layout_marginBottom="67dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editNama"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="29dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/spinnerKelamin"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Email"
            android:ems="10"
            android:id="@+id/editEmail"
            app:layout_constraintTop_toBottomOf="@+id/spinnerKelamin" android:layout_marginBottom="47dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editTelp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Telp"
            android:ems="10"
            android:id="@+id/editTelp"
            app:layout_constraintTop_toBottomOf="@+id/editEmail" android:layout_marginBottom="165dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editTambah"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:inputType="textPersonName"
            android:text="Alamat"
            android:ems="10"
            android:id="@+id/editAlamat" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTambah"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editTelp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/Jenis_Kelamin"
            android:id="@+id/spinnerKelamin"
            app:layout_constraintTop_toBottomOf="@+id/editNama" android:layout_marginBottom="44dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>